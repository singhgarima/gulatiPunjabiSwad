!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application", "bills"
    = javascript_include_tag "jquery.min.js", "jquery_ujs.js"
    -# = javascript_include_tag "sweet_tabs/script"
    = csrf_meta_tag
    = yield(:head)

  %body
    #header
      = render :partial => "shared/tabs"
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)

      = yield
