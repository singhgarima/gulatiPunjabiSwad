!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application", "bills", "jquery-ui-1.8.16.custom"
    = javascript_include_tag "jquery.min.js", "jquery_ujs.js", "jquery-ui-1.8.16.custom.min.js"
    = javascript_include_tag "application"
    -# = javascript_include_tag "sweet_tabs/script"
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      #header
        = render :partial => "shared/tabs"
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)
        %hr/

      = yield
