= javascript_include_tag "bill_add_more_menus"
%table
  =form_for @bill do |f|
    %tr
      = f.error_messages
    %tr
      %td
        = f.label :name
      %td
        = f.text_field :name
    %tr
      %td
        = f.label :menus
      %td
        = collection_select(:bill, :menu_ids, @menus, :id, :name, { :selected => @bill.menu_ids }, {:multiple => true, :menu => 'bill[menu_ids][]' })
        %span#selected_list
    %tr
      %td
        = f.label :total
      %td
        = f.text_field :total
    %tr
      %td
        = f.submit
