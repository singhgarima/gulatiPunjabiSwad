= javascript_include_tag "bill_add_more_menus"
%table
  =form_for @bill do |f|
    %tr
      = f.error_messages
    %tr
      %td
        = f.label :name
      %td
        = f.text_field :name
    %tr
      %table
        %h3 Order Placed
        %tr#order_placed
          = f.fields_for "bill_contents_attributes[0]", @bill.bill_contents.new do |bcf|
            = render :partial =>  "bill_contents/bill_content", :locals => { :bcf => bcf }
        %tr
          %td
            = add_form(f)
          %td
    %tr
      %td
        = f.label :total
      %td
        = f.text_field :total
    %tr
      %td
        = f.submit
