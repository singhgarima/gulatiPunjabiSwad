%ul.tabContainer
  %li
    %a.tab.blue{ :href => root_path } 
      = "Home"
      %span.left
      %span.right
  %li
    %a.tab.green{ :href => new_bill_path } 
      = "Bills"
      %span.left
      %span.right
  %li
    %a.tab.red{ :href => rations_path } 
      = "Ration"
      %span.left
      %span.right
  %li
    %a.tab.orange{ :href => menus_path } 
      = "Menu"
      %span.left
      %span.right
  %li
    %a.tab.yellow{ :href => (user_signed_in? ? destroy_user_session_path : user_session_path)} 
      = ( user_signed_in? ? "SignOut" : "SignIn")
      %span.left
      %span.right
.clear

